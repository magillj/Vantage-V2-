@{
    ViewBag.Title = "Home Page";
}
@model Vantage.Models.HomeViewModel
@section Modal

<style type="text/css">
    .ShowModal {
        top: 200px;
        left: 250px;
        z-index: 1000;
        position: absolute;
        background-color: White;
        display: block;
    }

    .HideModal {
        display: none;
    }

    .OverlayEffect {
        background-color: black;
        filter: alpha(opacity=70);
        opacity: 0.7;
        width: 100%;
        height: 100%;
        z-index: 400;
        position: absolute;
        top: 0;
        left: 0;
    }
</style>

<div class="jumbotron">
    <h1>Welcome to Vantage</h1>
    <p class="lead">Vantage is the website intended to manage the internal affairs of the Phi Kappa Psi fraternity. These include things like duties, fines, and house points.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Don't click me &raquo;</a></p>
</div>

<div>
    <h3>Important Announcements</h3>
    <ul class="list-group announcements">
        @foreach (var a in Model.Announcements)
        {
            if (a.IsCritical)
            {
                <li class="list-group-item criticalAnnouncement">@a.Title</li>
            }
            else
            {
                <li class="list-group-item">@a.Title</li>
            }
            // TODO: have it so that when clicked, the body is shown (modal popup)
        }
    </ul>
</div>


<div class="row">
    <div class="col-md-4">
        <h2>House Management</h2>
        <p>
            Because the house is always so clean and nothings ever broken
        </p>
        <p><a class="btn btn-default" href="/HouseManagement/DutySheet">Duties Sheet &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Information</h2>
        <p>Fines, house points, house directory, notes from the Executive Board</p>
        <table>
            <tr>
                <td><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Fines &raquo;</a></td>
                <td><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Points &raquo;</a></td>
            </tr>
            <tr>
                <td><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Notes &raquo;</a></td>
                <td><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Directory &raquo;</a></td>
            </tr>
        </table>
    </div>
    <div class="col-md-4">
        <h2>Message Boards</h2>
        <p>Lost and found, washing machine posts, and other specific bullshit that keeps clogging up the house group</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">See the list &raquo;</a></p>
    </div>
</div>



